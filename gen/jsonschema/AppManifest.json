{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$ref": "#/definitions/AppManifest",
  "definitions": {
    "AppManifest": {
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the container."
        },
        "author": {
          "type": "string",
          "description": "The author of the container"
        },
        "description": {
          "type": "string",
          "description": "A short description for the container"
        },
        "builds": {
          "items": {
            "$ref": "#/definitions/manifest.Build"
          },
          "type": "array"
        }
      },
      "additionalProperties": true,
      "type": "object",
      "title": "App Manifest"
    },
    "manifest.Build": {
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the build. Used as a post-fix for identifying this particular app."
        },
        "spec": {
          "$ref": "#/definitions/manifest.BuildSpec",
          "additionalProperties": true
        },
        "description": {
          "type": "string"
        },
        "trigger": {
          "$ref": "#/definitions/manifest.BuildTrigger",
          "additionalProperties": true
        }
      },
      "additionalProperties": true,
      "type": "object",
      "title": "Build",
      "description": "Generates an image under the scope of the app."
    },
    "manifest.BuildSpec": {
      "properties": {
        "tags": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "context": {
          "type": "string",
          "description": "The docker context."
        },
        "build_args": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object"
        }
      },
      "additionalProperties": true,
      "type": "object",
      "title": "Build Spec"
    },
    "manifest.BuildTrigger": {
      "properties": {
        "github_release": {
          "$ref": "#/definitions/manifest.BuildTrigger.GithubRelease",
          "additionalProperties": true,
          "description": "Injects build_arg LATEST_TAG_NAME"
        },
        "steam_feed": {
          "$ref": "#/definitions/manifest.BuildTrigger.SteamFeed",
          "additionalProperties": true,
          "description": "Injects build_arg LATEST_STEAM_VERSION"
        }
      },
      "additionalProperties": true,
      "type": "object",
      "title": "Build Trigger"
    },
    "manifest.BuildTrigger.GithubRelease": {
      "properties": {
        "repo": {
          "type": "string"
        }
      },
      "additionalProperties": true,
      "type": "object",
      "title": "Github Release"
    },
    "manifest.BuildTrigger.SteamFeed": {
      "properties": {
        "app_id": {
          "type": "string"
        },
        "spec": {
          "$ref": "#/definitions/manifest.BuildTrigger.SteamFeedSpec",
          "additionalProperties": true
        }
      },
      "additionalProperties": true,
      "type": "object",
      "title": "Steam Feed"
    },
    "manifest.BuildTrigger.SteamFeedSpec": {
      "properties": {
        "title_matcher": {
          "type": "string"
        },
        "body_matcher": {
          "type": "string"
        }
      },
      "additionalProperties": true,
      "type": "object",
      "title": "Steam Feed Spec"
    }
  }
}
